{% extends '../base.html.twig' %}
{% block body %}

        <div class="container-fluid">
            <div class="row mart10">
                <div class="col-12 shadow-lg bg-white1">
                    <div class="row">
                        <div class="col-6 offset-3 text-center mart10 marb20 padt01">

                            <div class="card">
                                <div class="card-header">
                                    {{ user.name }}
                                </div>
                                <div class="card-body">
                                    <blockquote class="blockquote mb-0 text-center">
                                        <img src="{{ user.userPick }}" class="userpic u150"/>
